<Window x:Class="ThumbDragSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas Name="myCanvas" Width="170" Height="170" Background="RoyalBlue">
            <Rectangle Fill="Red" HorizontalAlignment="Left" Height="87" Canvas.Left="31" Canvas.Top="40" VerticalAlignment="Top" Width="88"/>
            <Thumb Name="myThumb" Canvas.Bottom="0" Canvas.Right="0" Background="PaleGoldenrod"  Width="14" Height="14"
                   DragStarted="onDragStarted"
                   DragDelta="onDragDelta"
                   DragCompleted="onDragCompleted"/>

        </Canvas>
    </Grid>
</Window>
