<Window x:Class="ExercisePropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Height="23" Width="70" Margin="5" HorizontalAlignment="Left"
 VerticalAlignment="Top" Content="{Binding Data.Message}"/>
        <TextBox Height="23" Width="70" Margin="5,35,0,0" HorizontalAlignment="Left"
 VerticalAlignment="Top" Text="{Binding Data.Message}"/>
        <Button Height="23" Width="70" Margin="5,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Button"/>
    </Grid>
</Window>
